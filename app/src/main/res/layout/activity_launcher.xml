<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.lambdasoup.watchlater.LauncherActivity">
    <TextView
        android:id="@+id/explanation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/vertical_text_sep"
        android:text="@string/explanation"/>

    <Button
        android:id="@+id/example_link_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/vertical_text_sep"
        android:text="@string/button_example"
        android:onClick="onExampleLink"/>

    <TextView
        android:id="@+id/defaults_advice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/vertical_text_sep"
        android:layout_marginBottom="@dimen/vertical_text_sep"
        tools:text="The advice text for the defaults will be set programmatically after detection."/>

    <Button
        android:id="@+id/settings_youtube_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/vertical_text_sep"
        android:text="@string/button_settings_youtube"
        android:onClick="onSettingsYoutube"/>

    <Button
        android:id="@+id/settings_watchlater_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/vertical_text_sep"
        android:text="@string/button_settings_watchlater"
        android:onClick="onSettingsWatchlater"/>

    <Button
        android:id="@+id/settings_all_apps_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/vertical_text_sep"
        android:text="@string/button_settings_all_apps"
        android:onClick="onSettingsAllApps"/>

</LinearLayout>